{
    "compilerOptions": {
        "baseUrl": "../",
        "types": ["cypress", "@testing-library/cypress"],
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@framework": ["framework/shopify"],
            "@framework/*": ["framework/shopify/*"],
            "@components/*": ["components/*"],
            "@styles/*": ["styles/*"],
            "@assets/*": ["assets/*"],
            "@lib/*": ["lib/*"],
            "@contexts/*": ["contexts/*"],
            "@auth/*": ["auth/*"],
            "@tests/*": ["tests/*"],
            "@hooks": ["hooks"],
            "@hooks/*": ["hooks/*"],
            "@mocks": ["__mocks__"],
            "@mocks/*": ["__mocks__/*"]
        }
    },
    "include": [
        "../node_modules/cypress",
        "../cypress",
        "./**/*.ts",
        "./file.ts"
    ]
}
