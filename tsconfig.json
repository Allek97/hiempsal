{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@framework": ["framework/shopify"],
            "@framework/*": ["framework/shopify/*"],
            "@components/*": ["components/*"],
            "@styles/*": ["styles/*"],
            "@assets/*": ["assets/*"],
            "@lib/*": ["lib/*"],
            "@contexts/*": ["contexts/*"],
            "@auth/*": ["auth/*"],
            "@tests/*": ["tests/*"],
            "@hooks": ["hooks"],
            "@hooks/*": ["hooks/*"],
            "@mocks": ["__mocks__"],
            "@mocks/*": ["__mocks__/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "jest.config.js",
        "next.config.js",
        "__mocks__/*",
        "**/*.ts",
        "**/*.tsx",
        "__mocks__/framer-motion.js"
    ],
    "exclude": ["node_modules"]
}
